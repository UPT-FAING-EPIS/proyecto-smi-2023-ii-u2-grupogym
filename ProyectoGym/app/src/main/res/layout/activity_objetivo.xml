<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".Views.Usuario.NivelActivity">

    <TextView
        android:id="@+id/textViewSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuáles son tus objetivos principales?"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        />

    <Button
        android:id="@+id/buttonPerder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pierde peso"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/buttonAumentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Aumentar músculo"
        />

    <Button
        android:id="@+id/buttonMantener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Matenerme en forma"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonSiguiente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_theme"
        android:text="SIGUIENTE"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
