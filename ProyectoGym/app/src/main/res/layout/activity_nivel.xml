<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".Views.Usuario.NivelActivity">

    <TextView
        android:id="@+id/textViewSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu nivel?"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        />

    <Button
        android:id="@+id/buttonPrincipiante"
        style="@style/BotonRedondeado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Principiante"
        android:layout_marginTop="10dp"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/buttonIntermedio"
        style="@style/BotonRedondeado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Intermedio"
        android:onClick="onButtonClick" />

    <Button
        android:id="@+id/buttonAvanzado"
        style="@style/BotonRedondeado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Avanzado"
        android:onClick="onButtonClick" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonSiguiente1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:backgroundTint="@color/app_theme"
        android:text="SIGUIENTE"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
